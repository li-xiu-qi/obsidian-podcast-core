# EditorConfig 是为了在不同的编辑器之间保持一致的代码风格设置
# top-most EditorConfig file
root = true

# 所有文件
[*]
charset = utf-8
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true

# JSON 文件
[*.json]
indent_size = 2

# YAML 文件
[*.{yaml,yml}]
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false

# TypeScript/JavaScript 文件
[*.{ts,tsx,js,jsx}]
indent_size = 2
insert_final_newline = true
